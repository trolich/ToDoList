<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="96dp"
                                            android:layout_margin="6dp">
    <TextView
            android:text="TextView"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:id="@+id/toDoName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="150dp"
            android:layout_height="31dp"
            android:id="@+id/toDoType"
            app:layout_constraintTop_toBottomOf="@+id/toDoName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="Finish"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:id="@+id/finishToDoButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Details"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:id="@+id/details_button" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/finishToDoButton"
            app:layout_constraintStart_toStartOf="@+id/finishToDoButton"
            app:layout_constraintEnd_toEndOf="@+id/finishToDoButton"/>
</android.support.constraint.ConstraintLayout>