<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_shopping_details"
        tools:context=".ShoppingDetailsActivity">

    <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShoppingDetailsLocationTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/shoppingDetailsTypeTextView"/>
    <TextView
            android:text="Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shoppingDetailsTypeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Spinner
            android:layout_width="147dp"
            android:layout_height="18dp"
            android:id="@+id/shoppingDetailsTypeSpinner" app:layout_constraintStart_toEndOf="@+id/shoppingDetailsTypeTextView"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/shoppingDetailsTypeTextView"
            app:layout_constraintTop_toTopOf="@+id/shoppingDetailsTypeTextView"/>
</android.support.constraint.ConstraintLayout>